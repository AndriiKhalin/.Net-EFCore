<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LB_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LB_2.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">LB_2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Computers/Index">Computers</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark">
                                Components
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/ComponentComputers/Index">All Components</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/Processors/Index">Processors</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/VideoCards/Index">VideoCards</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/HardDrives/Index">HardDrives</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/Rams/Index">Rams</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/Units/Index">Units</a></li>
                                <li><a class="dropdown-item nav-link text-dark  fw-bold" asp-area="" asp-page="/MotherBoards/Index">MotherBoards</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LB_2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>