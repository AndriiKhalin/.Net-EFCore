@page
@model LB_2.Pages.Processors.EditModel

<h4>Processor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Processor.Id" />
            
            <div class="form-group">
                <label asp-for="Processor.Id" class="control-label"></label>
                <input readonly  class="form-control-plaintext" value="@Model.Processor.Id"/>
            </div>

            <div class="form-group">
                <label asp-for="Processor.Name" class="control-label"></label>
                <input asp-for="Processor.Name" class="form-control" />
                <span asp-validation-for="Processor.Name" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Processor.Image" class="control-label"></label>
                <input asp-for="Processor.Image" class="form-control" />
                <span asp-validation-for="Processor.Image" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Processor.SocketType" class="control-label"></label>
                <input asp-for="Processor.SocketType" class="form-control" />
                <span asp-validation-for="Processor.SocketType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.ProcessorModel" class="control-label"></label>
                <input asp-for="Processor.ProcessorModel" class="form-control" />
                <span asp-validation-for="Processor.ProcessorModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.ProcessorGeneration" class="control-label"></label>
                <input asp-for="Processor.ProcessorGeneration" class="form-control" />
                <span asp-validation-for="Processor.ProcessorGeneration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.NumCores" class="control-label"></label>
                <input asp-for="Processor.NumCores" class="form-control" />
                <span asp-validation-for="Processor.NumCores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.NumThreads" class="control-label"></label>
                <input asp-for="Processor.NumThreads" class="form-control" />
                <span asp-validation-for="Processor.NumThreads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.ClockFrequency" class="control-label"></label>
                <input asp-for="Processor.ClockFrequency" class="form-control" />
                <span asp-validation-for="Processor.ClockFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processor.Price" class="control-label"></label>
                <input asp-for="Processor.Price" class="form-control" />
                <span asp-validation-for="Processor.Price" class="text-danger"></span>
            </div>
            
            <div class="my-4 ms-5">
                <div class="d-grid gap-2   d-md-flex ms-5">
                    <input type="submit" value="Save" class="btn btn-success me-md-2 col-3"/>
                    <a asp-page="Index" class="btn btn-primary col-3">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
