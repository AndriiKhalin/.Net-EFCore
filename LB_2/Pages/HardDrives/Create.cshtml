@page
@model LB_2.Pages.HardDrives.CreateModel

<h4>HardDrive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HardDrive.Name" class="control-label"></label>
                <input asp-for="HardDrive.Name" class="form-control" />
                <span asp-validation-for="HardDrive.Name" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="Processor.Image" class="control-label"></label>
                <input asp-for="Processor.Image" class="form-control" />
                <span asp-validation-for="Processor.Image" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="HardDrive.HardDriveType" class="control-label"></label>
                <input asp-for="HardDrive.HardDriveType" class="form-control" />
                <span asp-validation-for="HardDrive.HardDriveType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HardDrive.StorageSize" class="control-label"></label>
                <input asp-for="HardDrive.StorageSize" class="form-control" />
                <span asp-validation-for="HardDrive.StorageSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HardDrive.ReadWriteSpeed" class="control-label"></label>
                <input asp-for="HardDrive.ReadWriteSpeed" class="form-control" />
                <span asp-validation-for="HardDrive.ReadWriteSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HardDrive.Price" class="control-label"></label>
                <input asp-for="HardDrive.Price" class="form-control" />
                <span asp-validation-for="HardDrive.Price" class="text-danger"></span>
            </div>

            <div class="my-4 ms-5">
                <div class="d-grid gap-2   d-md-flex ms-5">
                    <input type="submit" value="Create" class="btn btn-success me-md-2 col-3"></input>
                    <a asp-page="Index" class="btn btn-primary col-3">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
